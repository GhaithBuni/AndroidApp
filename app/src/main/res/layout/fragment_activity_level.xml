<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ActivityLevel"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ActivityText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ActivityLevel"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginTop="60dp"

        android:padding="15dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/Light_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:text="@string/light"
        android:textColor="@color/buttonColor" />

    <Button
        android:id="@+id/moderate_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:layout_marginTop="30dp"
        android:text="@string/moderate"
        android:textColor="@color/buttonColor" />
    <Button
        android:id="@+id/active_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:layout_marginTop="30dp"
        android:text="@string/active"
        android:textColor="@color/buttonColor" />
    <Button
        android:id="@+id/veryActive_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:layout_marginTop="30dp"
        android:text="@string/VeryActive"
        android:textColor="@color/buttonColor" />

    <Button
        android:id="@+id/activity_next"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="240dp"
        android:backgroundTint="@color/buttonColor"
        android:text="@string/Next"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>




</LinearLayout>